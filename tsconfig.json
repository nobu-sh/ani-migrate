{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "bin",
    "target": "es2020",
    "lib": ["ES2020"],
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "bin"
  ]
}